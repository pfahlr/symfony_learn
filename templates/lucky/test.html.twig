{# templates/lucky/number.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}
{% block body %}
<h1>{{ title }}</h1>
    <div class="row">
        <div class="col-md-4">
            <ul class="content">
            {% for item in content %}
            <li>{{ item }}</li>
            {% endfor %}
            </ul>

            <ul>
                <li><a href="{{ path('lucky_number', {'number':18}) }}">lucky/number/18</a></li>
                <li><a href="{{ path('lucky_number', {'number':99}) }}">lucky/number/99</a></li>

            </ul>
            {% if app.debug %}
                <p>Request method: {{ app.request.method }}</p>
                <p>Application Environment: {{ app.environment }}</p>
            {% endif %}
        </div>
        <div class="col-md-8">
            <img class="img-responsive" src="{{ asset('build/images/neptune.png') }}"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <img class="img-responsive" src="{{ asset('build/images/black-hole.jpg') }}" />
        </div>
    </div>
{% endblock %}
